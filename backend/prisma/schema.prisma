generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  email        String   @unique
  password     String
  createdAt    DateTime @default(now())
  player1Games Game[]   @relation("GamePlayer1")
  player2Games Game[]   @relation("GamePlayer2")
}

model Game {
  id        Int      @id @default(autoincrement())
  player1Id Int
  player2Id Int
  score1    Int
  score2    Int
  playedAt  DateTime @default(now())
  player1   User     @relation("GamePlayer1", fields: [player1Id], references: [id])
  player2   User     @relation("GamePlayer2", fields: [player2Id], references: [id])
}